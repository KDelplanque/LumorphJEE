<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config 
PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>

	<!-- Définition des Formulaires -->
	<form-beans type="org.apache.struts.action.ActionFormBean">
		<form-bean name="editMap" type="com.ludomorph.beans.web.LevelSaveVO" />
		<form-bean name="connexion" type="com.ludomorph.beans.web.ConnexionVO" />
	</form-beans>

	<!-- Définition des Actions -->
	<action-mappings type="org.apache.struts.action.ActionMapping">
		<action path="/template" type="com.ludomorph.action.MenuAction">
			<forward name="success" path="/jsp/template-page.jsp" />
			<forward name="loadLevel" path="/loadLevel.do" />
		</action>
		
		<action path="/connexion" input="/jsp/template-page.jsp" name="connexion" type="com.ludomorph.action.ConnexionAction">
			<forward name="success" path="/jsp/template-page.jsp" />
		</action>
		
		<action path="/editMap" type="com.ludomorph.action.SaveMapAction" name="editMap" input="/jsp/template-page.jsp">
			<forward name="success" path="/jsp/template-page.jsp" />
		</action>
	</action-mappings>

	<!-- Application ressource -->
	<message-resources parameter="ApplicationResources" />

</struts-config>
