<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config 
PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>

	<!-- Définition des Formulaires -->
	<form-beans type="org.apache.struts.action.ActionFormBean">
		<form-bean name="editMap" type="com.ludomorph.beans.web.LevelVO" />
		<form-bean name="editLine" type="com.ludomorph.beans.web.LevelLineVO" />
		<form-bean name="editTestMap" type="com.ludomorph.beans.web.LevelVO" />
	</form-beans>

	<!-- Définition des Actions -->
	<action-mappings type="org.apache.struts.action.ActionMapping">
		<action path="/loadLevel" type="com.ludomorph.action.LoadMapAction">
			<forward name="success" path="/jsp/LM00_editLevel.jsp" />
		</action>
		<action path="/editMap" type="com.ludomorph.action.LoadMapAction" scope="request"
			name="editMap">
			<forward name="success" path="/jsp/LM00_editLevel.jsp" />
		</action>
		<action path="/test" type="com.ludomorph.action.TestAction">
			<forward name="success" path="/jsp/formTest.jsp" />
		</action>
		<action path="/editLine" type="com.ludomorph.action.TestAction" scope="request"
			name="editLine">
			<forward name="success" path="/jsp/formTest.jsp" />
		</action>
		<action path="/editTestMap" type="com.ludomorph.action.TestAction" scope="request"
			name="editLine">
			<forward name="success" path="/jsp/formTest.jsp" />
		</action>
	</action-mappings>

	<!-- Application ressource -->
	<message-resources parameter="ApplicationResources" />

</struts-config>
